@model (List<(FanficModel, List<ChapterModel>)>, bool)

<script>
    function confirmDelete(event) {
        if (confirm("Are you sure?")) {
            window.location.href = "/Chapter/Delete/" + event.target.dataset.chapter;
        }
    }
</script>

<div class="container-fluid">
    <div class="container">
        <h3>Your fanfics:</h3><hr>

        @foreach (var tuple in Model.Item1)
        {
            <div class="mb-3"> 
                <div class="row mb-2"> @*Строка фанфика*@
                    <div class="col-sm">
                        <h6 class="mb-0">@tuple.Item1.Name</h6>
                    </div>
                    <div class="col-sm d-flex flex-wrap">
                        <a class="px-2" href="/Chapter/Create/@tuple.Item1.Id">Add new chapter</a>
                    </div>
                </div>

                <div>
                    @foreach (var c in tuple.Item2)
                    {
                        <div class="row"> @*Строки глав*@
                            <div class="col-sm">
                                <a href="/Chapter/Index/@c.Id"><p class="pl-3 mb-0">@c.Name</p></a>
                            </div>
                            <div class="col-sm d-flex flex-wrap align-items-center">
                                <a class="px-2" href="/Chapter/Edit/@c.Id">Edit</a>
                                <button class="btn btn-danger py-0" onclick="confirmDelete(event)" data-chapter="@c.Id">Delete</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        <div class="d-flex flex-wrap justify-content-between">
            <a href="/Fanfic/Create">Create new fanfic</a>
        </div>
    </div>
</div>